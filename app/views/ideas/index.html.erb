<p id="notice"><%= notice %></p>

<h1>Listing ideas</h1>

<section data-controller="ideas">
  <% @ideas.in_groups_of(3) do |group| %>
    <div class="row">
      <% group.compact.each do |idea| %>
        <%= render(IdeaComponent.new(idea: idea)) %>
      <% end %>
    </div>
  <% end %>
</section>

<br>

<%= link_to 'New Idea', new_idea_path %>
