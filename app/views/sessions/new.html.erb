<%= form_with(url: login_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :account %>
    <%= form.text_field :account %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit 'ログイン' %>
  </div>
<% end %>
